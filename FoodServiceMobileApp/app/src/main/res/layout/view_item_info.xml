<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/pck_bsaddr"
        android:layout_width="122dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/pck_qty"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="436dp"
        android:layout_marginBottom="-261dp"
        android:text="Business Address"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/pck_bsname"
        android:layout_width="122dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/pck_qty"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="379dp"
        android:layout_marginBottom="-204dp"
        android:text="Business Name"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/pck_exp"
        android:layout_width="122dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/pck_qty"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="313dp"
        android:layout_marginBottom="-138dp"
        android:text="Expiration Date"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/pck_price"
        android:layout_width="122dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/pck_qty"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="242dp"
        android:layout_marginBottom="-67dp"
        android:text="Price"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/pck_qty"
        android:layout_width="122dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="175dp"
        android:text="Quantity"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/pck_name"
        android:layout_width="122dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="43dp"
        android:text="Name"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/pck_desc"
        android:layout_width="122dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/pck_name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="111dp"
        android:text="Description"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Close" />
</RelativeLayout>